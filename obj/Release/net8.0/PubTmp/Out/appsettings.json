{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            // Ruta para obtener todos los usuarios (GET /usuarios)
            "usuarios-get-all": {
                "ClusterId": "usuarios-cluster",
                "Match": {
                    "Path": "/usuarios",
                    "Methods": [ "GET" ]
                }
            },
            // Ruta para obtener un usuario por ID (GET /usuarios/{id})
            "usuarios-get-by-id": {
                "ClusterId": "usuarios-cluster",
                "Match": {
                    "Path": "/usuarios/{id}",
                    "Methods": [ "GET" ]
                }
            },
            // Ruta para obtener un usuario por ID (GET /usuarios/{id})
            "todos": {
                "ClusterId": "todos-cluster",
                "Match": {
                    "Path": "/todos/{id}",
                    "Methods": [ "GET" ]
                }

            }


        },

        "Clusters": {
            "usuarios-cluster": {
                "Destinations": {
                    "usuarios-backend": {
                        "Address": "https://jsonplaceholder.typicode.com/"
                    }
                }
            },
            "todos-cluster": {
                "Destinations": {
                    "Usuarios_todos": {
                        "Address": "https://jsonplaceholder.typicode.com/"
                    }
                }
            }
        }
    }
}